<html lang="en">
	<head>
		<meta charset="utf-8" />
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Perlin Playground</title>
	</head>
	<body>
    <canvas id="asciiCanvas"></canvas>

    <div id="controls">
        <label title="Noise layers. Lower = more predictable shapes.">
          <span class="label-text">Octaves:</span>
          <input type="range" id="octavesSlider" min="1" max="10" step="1" value="5" />
          <span id="octavesVal" class="value">5</span>
        </label>

        <label title="Frequency increase per layer. Lower = less fine detail.">
          <span class="label-text">Lacunarity:</span>
          <input type="range" id="lacunaritySlider" min="1" max="4" step="0.1" value="2" />
          <span id="lacunarityVal" class="value">2.0</span>
        </label>

        <label title="Amplitude decrease per octave. Lower = smoother overall.">
          <span class="label-text">Persistence:</span>
          <input type="range" id="persistenceSlider" min="0.1" max="1" step="0.05" value="0.8" />
          <span id="persistenceVal" class="value">0.80</span>
        </label>

        <label title="Zoom level. Larger = more zoomed out.">
          <span class="label-text">Scale:</span>
          <input type="range" id="scaleSlider" min="0.001" max="0.1" step="0.001" value="0.005" />
          <span id="scaleVal" class="value">0.005</span>
        </label>

        <label title="Animation speed. Higher = faster movement.">
          <span class="label-text">Speed:</span>
          <input type="range" id="speedSlider" min="0.01" max="0.5" step="0.01" value="0.10" />
          <span id="speedVal" class="value">0.10</span>
        </label>

        <div class="colourRow" title="Adjust foreground and background colours.">
          <label>
            <span class="label-text">Colours:</span>
            <input type="color" id="colorPicker" value="#6428B4" />
          </label>
          <label>
            <input type="color" id="bgColorPicker" value="#000000" />
          </label>
        </div>

        <label title="Seed -- changes randomisation in a predictible way">
          <span class="label-text">Seed:</span>
          <input type="number" id="seedInput" min="0" max="100" step="0.001" value="0.124" />
        </label>

        <label class="full-width" title="Characters used for rendering. Ordered by brightness.">
          <span class="label-text">Custom ASCII:</span>
          <textarea
            id="asciiInput"
            rows="1"
            style="font-family:monospace; font-size:14px;"
          >.:-=+*IJLTF1HEAYZVCUXK234S5796BDOPQGM80W@%#</textarea>
        </label>


        <script>
            import "../scripts/perlinPlayground.ts";
        </script>
	</body>
</html>

<style>
body {
    background: black;
}
canvas {
    z-index: -1;
    position: absolute;
    top: 0;
    left: 0;
}

#controls {
    position: absolute;
    top: 16px;
    left: 16px;
    background: rgba(16, 3, 33, 0.7);
    padding: 20px;
    border-radius: 9px;
    z-index: 10;
    color: #fff;
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    box-shadow: 0 0 0 2px rgba(255,255,255,0.3);
}

#controls label {
    display: grid;
    grid-template-columns: 100px 1fr 40px;
    column-gap: 8px;
    margin-top: 8px;
    align-items: center;
    font-size: 14px;
}

/* GO IN COLUMN 2 */
#controls input[type="range"],
#controls input[type="number"],
#controls textarea {
    grid-column: 2;
    width: 90%;
    background: transparent;
    border: none;
    color: #fff;
    padding: 4px 6px;
    font-size: 14px;
}

#controls input[type="number"],
#controls textarea {
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 4px;
}

/* GO IN COLUMN 3 */
#controls .value {
    grid-column: 3;
    text-align: right;
    font-size: 14px;
}

/* SPAN COLUMNS 2 & 3 */
#controls label.full-width textarea,
#controls input[type="number"] {
    grid-column: 2 / span 2;
}

.colourRow  {
    grid-column: 2 / span 2;
    display: flex;
    flex-direction: row;
}
#controls input[type="color"] {
    border: 1px;
}

</style>
